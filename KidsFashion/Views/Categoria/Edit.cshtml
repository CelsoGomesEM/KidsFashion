@model KidsFashion.Models.CategoriaViewModel

@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="container">
    <h1 class="display-4 text-center">Editar Categoria</h1>

    @using (Html.BeginForm("SubmitEdit", "Categoria", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Id)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <div class="col-md-12 mb-3">
                <label for="descricao" class="form-label">@Html.DisplayNameFor(model => model.Descricao)</label>
                @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", @required = "required", id = "Descricao" })
                @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row" style="margin-top: 10px;">
            <div class="col d-flex justify-content-end">
                <a href="@Url.Action("Index", "Categoria")">
                    <button type="button" class="btn btn-secondary">Voltar</button>
                </a>
                <button type="submit" class="btn btn-success" id="submitButton" style="margin-left: 15px;">Salvar</button>
            </div>
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
